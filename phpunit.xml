<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./tests/bootstrap.php"
	beStrictAboutTestsThatDoNotTestAnything="true"
	beStrictAboutOutputDuringTests="true"
	colors="true"
	backupGlobals="false"
	backupStaticAttributes="false"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	processIsolation="false"
	stopOnFailure="false"
	syntaxCheck="true"
>
	<testsuites>
		<testsuite name="Hoborg_Dashboard">
			<directory>./tests/Hoborg/Dashboard</directory>
		</testsuite>

		<testsuite name="Hoborg_DashboardCache">
			<directory>./tests/Hoborg/DashboardCache</directory>
		</testsuite>
	</testsuites>

	<!-- code coverage filters -->
	<filter>
		<whitelist>
			<directory suffix=".php">./src/Hoborg/Dashboard</directory>
		</whitelist>
	</filter>

	<logging>
		<log type="coverage-text" target="php://stdout" showOnlySummary="true" showUncoveredFiles="true" />
	</logging>

</phpunit>
